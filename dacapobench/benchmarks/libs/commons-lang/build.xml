<project name="commons-lang" default="all" basedir="../..">
    <description>Jakarta commons-lang library</description>

    <property environment="env"/>

    <property file="dacapo.properties"/>

    <property name="lib-name" value="commons-lang"/>

    <!-- Downloading from sourceforge -->
    <property name="lib-version" value="2.6"/>
    <property name="lib-src" value="${lib-name}-${lib-version}-bin.tar.gz"/>
    <property name="lib-url" value="${apache.mirror}/commons/lang/binaries"/>
    <property name="lib-jar" value="${lib-name}-${lib-version}.jar"/>

    <import file="../common.xml"/>

    <target name="unpack" depends="untar"/>

    <target name="jar">
        <copy file="${lib-build-dir}/${lib-name}-${lib-version}/${lib-jar}" todir="${lib-jars}"/>
    </target>

</project>

